@page "/data"
@inject HttpClient Http

<h1>Weather forecast</h1>

<p>This component demonstrates fetching data from the server.</p>

@if (forecasts == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <button class="btn btn-primary" @onclick="Add">Add Data</button>
    <br />
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Temp. (C)</th>
                <th>Temp. (F)</th>
                <th>Summary</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var forecast in forecasts)
            {
                <tr>
                    <td>@forecast.Date.ToDateTime().ToShortDateString()</td>
                    <td>@forecast.TemperatureC</td>
                    <td>@forecast.TemperatureF</td>
                    <td>@forecast.Summary</td>
                    <td><button class="btn btn-primary" @onclick="() => Remove(forecast.Id)">Delete</button></td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<WeatherForecastReply> forecasts;

    private static readonly string[] Summaries = new[]
    {
            "Freezing", "Bracing", "Chilly", "Cool", "Mild", "Warm", "Balmy", "Hot", "Sweltering", "Scorching"
    };

    protected override async Task OnInitializedAsync()
    {

        forecasts = await Http.GetFromJsonAsync<List<WeatherForecastReply>>("https://localhost:5003/weatherforecast");
    }

    private async Task Add()
    {
     
        var rand = new Random();

        await Http.PutAsJsonAsync<WeatherForecast>("https://localhost:5003/weatherforecast", new WeatherForecast
        {
            Date = DateTime.Now,
            Summary = Summaries[rand.Next(9)],
            TemperatureC = rand.Next(50),
            TemperatureF = rand.Next(200)
        });

        forecasts = await Http.GetFromJsonAsync<List<WeatherForecastReply>>("https://localhost:5003/weatherforecast");

    }

    private async Task Remove(long id)
    {
       
        await Http.DeleteAsync($"https://localhost:5003/weatherforecast?id={id}");

        forecasts = await Http.GetFromJsonAsync<List<WeatherForecastReply>>("https://localhost:5003/weatherforecast");
    }
}

